 {{#if exitoso }}
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="alert alert-success alerte-dismissible fade show" role="alert">
                    {{exitoso}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <spam aria-hidden="true">
                            &times;
                        </spam>
                    </button>
                </div>
            </div>
        </div>
    </div>
{{/if}}

 {{#if message }}
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="alert alert-danger alerte-dismissible fade show" role="alert">
                    {{message}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <spam aria-hidden="true">
                            &times;
                        </spam>
                    </button>
                </div>
            </div>
        </div>
    </div>
{{/if}}